@{
	ViewData["Title"] = "Delete Movie";
}

@model Movie

<div class="border p-3 mt-4">
	<h3>@Model.Title</h3>
	<img src="@Model.Image" width="250" />
	<br />
	<div class="row">
		<h3>Are you sure you want to delete this movie?</h3>
	</div>
	<div class="row">
		<div class="col-6">
			<form asp-controller="Movie" asp-action="Delete">
				<input hidden asp-for="Title" />
				<input hidden asp-for="Year" />
				<input hidden asp-for="Rating" />
				<input hidden asp-for="Image" />
				<input hidden asp-for="ID" />

				<button type="submit" class="btn btn-danger">
					Delete
				</button>
			</form>
		</div>
		<div class="col-6">
			<form asp-controller="Movie" asp-action="MultMovies">
				<button type="submit" class="btn btn-primary">
					Cancel
				</button>
			</form>
		</div>
	</div>
	<div name="lblMsg" class="text-danger">
		@ViewData["Error"]
	</div>
</div>
